<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Configure Node.js as the platform -->
    <handlers>
      <add name="NodejsHandler" path="*" verb="*" modules="IsapiModule" scriptProcessor="C:\Program Files (x86)\nodejs\node.exe" resourceType="Unspecified" />
    </handlers>

    <!-- Specify the directory for the Node.js app -->
    <defaultDocument>
      <files>
        <add value="server.js" />
      </files>
    </defaultDocument>

    <!-- Configure HTTP request settings -->
    <rewrite>
      <rules>
        <rule name="Nodejs" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Ensure the environment variable for Node.js is set -->
    <environmentVariables>
      <add name="PORT" value="8080" />
    </environmentVariables>
  </system.webServer>
</configuration>
